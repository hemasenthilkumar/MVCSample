@*@model  MVCSample.Models.Movie*@
@*model MVCSample.ViewModels.RandomMovieViewModel*@
@*@using MVCSample.Models*@

@model List<MVCSample.Models.Movie>

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


@if (Model.Count==0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <ul>
        @foreach (var mov in Model)
        {
            <li>@mov.Name</li>
        }
    </ul>

}

