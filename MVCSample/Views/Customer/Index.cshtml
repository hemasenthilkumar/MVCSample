@model List<MVCSample.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if(Model.Count==0)
{
    <text>No customers yet</text>
}
else
{
<table>
    @foreach (var cus in Model)
    {
    <tr>
        <td><h2><a href="@Url.Action("details", "Customer",new { id = cus.Id })">@cus.Name</a></h2></td>
    </tr>
    }
</table>
}