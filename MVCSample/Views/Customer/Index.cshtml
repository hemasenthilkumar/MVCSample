@model List<MVCSample.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if(Model.Count==0)
{
    <text>No customers yet</text>
}
else
{
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer Details</th>
            <th>Membership Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cus in Model)
        {
            <tr>
                <td><a href="@Url.Action("Edit", "Customer",new { id = cus.Id })">@cus.Name</a></td>
                <td>@cus.MembershipType.Name</td>
            </tr>
        }
    </tbody>
</table>
}